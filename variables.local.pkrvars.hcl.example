# Example variables file for local Packer builds
# Copy this to variables.local.pkrvars.hcl and fill in your values
# DO NOT commit variables.local.pkrvars.hcl to git

# AWS Configuration
# AWS credentials are provided via AWS CLI or environment variables:
#   Option 1: Use AWS CLI
#     aws configure
#   Option 2: Set environment variables
#     export AWS_ACCESS_KEY_ID="your-access-key"
#     export AWS_SECRET_ACCESS_KEY="your-secret-key"
#     export AWS_DEFAULT_REGION="us-east-1"
aws_region = "us-east-1"

# Image Configuration
ubuntu_version = "22.04"
instance_type  = "t3.micro"
image_name     = "ubuntu-golden-image"








